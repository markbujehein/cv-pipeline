\makeatother

\geometry{left=1cm,right=1cm,top=1.5cm,bottom=1.5cm,columnsep=1.5cm}

\usepackage{paracol}

\iftutex
  \setmainfont{Roboto Slab}
  \setsansfont{Lato}
  \renewcommand{\familydefault}{\sfdefault}
\else
  \usepackage[rm]{roboto}
  \usepackage[defaultsans]{lato}
  \renewcommand{\familydefault}{\sfdefault}
\fi

% ENGINEERING MANAGER: Authority & Trust
% Colors: Dark professional blues, strong presence
\definecolor{SlateGrey}{HTML}{2E2E2E}
\definecolor{LightGrey}{HTML}{666666}
\definecolor{AuthorityBlue}{HTML}{1e3a8a}      % Deep navy - authority
\definecolor{TrustBlue}{HTML}{0f62fe}          % IBM blue - trust
\definecolor{LeadershipGold}{HTML}{d4af37}     % Muted gold - achievement
\colorlet{name}{black}
\colorlet{tagline}{AuthorityBlue}
\colorlet{heading}{AuthorityBlue}
\colorlet{headingrule}{TrustBlue}
\colorlet{subheading}{AuthorityBlue}
\colorlet{accent}{TrustBlue}
\colorlet{emphasis}{SlateGrey}
\colorlet{body}{LightGrey}

% Strong, authoritative fonts
\renewcommand{\namefont}{\Huge\rmfamily\bfseries}
\renewcommand{\personalinfofont}{\footnotesize}
\renewcommand{\cvsectionfont}{\LARGE\rmfamily\bfseries}
\renewcommand{\cvsubsectionfont}{\large\bfseries}

% Stronger visual markers for leadership
\renewcommand{\cvItemMarker}{{\small\textbullet}}
\renewcommand{\cvRatingMarker}{\faCircle}

% Override linkedin to show "LinkedIn" text with clickable link
\renewcommand{\linkedin}[1]{%
  \printinfo{\faLinkedin}{LinkedIn}[https://linkedin.com/in/#1]%
}

\begin{document}
\name{{% endraw %}{{ personal.first_name }} {{ personal.last_name }}{% raw %}}
\tagline{{% endraw %}{{ personal.taglines['engineering-manager'] }}{% raw %}}

\personalinfo{%
  \email{{% endraw %}{{ personal.email }}{% raw %}}
  \phone{{% endraw %}{{ personal.phone }}{% raw %}}
  \location{{% endraw %}{{ personal.location }}{% raw %}}
  \homepage{{% endraw %}{{ personal.website | replace('https://', '') | replace('http://', '') }}{% raw %}}
  \linkedin{{% endraw %}{{ personal.linkedin | replace('https://www.linkedin.com/in/', '') | replace('https://linkedin.com/in/', '') | replace('/', '') }}{% raw %}}
  \github{{% endraw %}{{ personal.github | replace('https://github.com/', '') | replace('/', '') }}{% raw %}}
}

\makecvheader

\columnratio{0.6}

\begin{paracol}{2}

\cvsection{Leadership Profile}

\textbf{{% endraw %}{{ strengths[0].title | escape_latex if strengths else "Strategic Leadership" }}{% raw %}}

{% endraw %}{{ strengths[0].description | escape_latex if strengths else "Experienced engineering manager with strong technical background and proven leadership skills." }}{% raw %}

\medskip

\cvsection{Professional Experience}

{% endraw %}
{% for job in experience[:6] -%}

{% raw %}\cvevent{{% endraw %}{{ job.title | escape_latex }}{% raw %}}{{% endraw %}{{ job.company | escape_latex }}{% raw %}}{{% endraw %}{{ job.start_date }}--{{ job.end_date }}{% raw %}}{{% endraw %}{{ job.location | escape_latex }}{% raw %}}
\begin{itemize}
{% endraw %}
{% for achievement in job.achievements[:3] -%}
{% raw %}\item {% endraw %}{{ achievement | escape_latex }}
{% endfor -%}
{% raw %}\end{itemize}

\divider

{% endraw %}
{% endfor -%}

{% raw %}\switchcolumn

\cvsection{Core Strengths}

{% endraw %}
{% for strength in strengths[:4] -%}
{% raw %}\cvachievement{\faTrophy}{{% endraw %}{{ strength.title | escape_latex }}{% raw %}}{{% endraw %}{{ strength.description | escape_latex }}{% raw %}}

{% endraw %}{% if not loop.last %}{% raw %}\divider

{% endraw %}{% endif %}
{% endfor -%}

{% raw %}\cvsection{Expertise}

\cvtag{Leadership}
\cvtag{Strategy}
\cvtag{Team Building}

\divider\medskip

{% endraw %}
{% for skill in skills['Programming Languages'][:6] -%}
{% raw %}\cvtag{{% endraw %}{{ skill | escape_latex }}{% raw %}}
{% endraw %}
{% endfor -%}

{% raw %}\divider\medskip

{% endraw %}
{% for skill in skills['DevOps and Cloud Technologies'][:8] -%}
{% raw %}\cvtag{{% endraw %}{{ skill | escape_latex }}{% raw %}}
{% endraw %}
{% endfor -%}

{% raw %}\cvsection{Education}

{% endraw %}
{% for edu in education -%}
{% raw %}\cvevent{{% endraw %}{{ edu.degree | escape_latex }}{% if edu.specialization %} ({{ edu.specialization | escape_latex }}){% endif %}{% raw %}}{{% endraw %}{{ edu.institution | escape_latex }}{% raw %}}{{% endraw %}{{ edu.start_date }}--{{ edu.end_date }}{% raw %}}{{% endraw %}{{ edu.location | escape_latex }}{% raw %}}

{% endraw %}
{% endfor -%}

{% raw %}\cvsection{Certifications}

{% endraw %}
{% for cert in certifications -%}
{% raw %}\cvtag{{% endraw %}{{ cert.name | escape_latex }}{% raw %}}
{% endraw %}
{% endfor -%}

{% raw %}\end{paracol}

\end{document}
