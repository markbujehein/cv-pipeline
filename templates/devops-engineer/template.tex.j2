\cvsection{Education}

{% endraw %}
{% for edu in education -%}
{% raw %}\cvevent{{% endraw %}{{ edu.degree | escape_latex }}{% raw %}}{{% endraw %}{{ edu.institution | escape_latex }}{% raw %}}{{% endraw %}{{ edu.start_date }}--{{ edu.end_date }}{% raw %}}{{% endraw %}{{ edu.location | escape_latex }}{% raw %}}

{% endraw %}
{% endfor -%}

